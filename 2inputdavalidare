    <title>Verificare Lunghezza Input</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        input {
            margin: 10px 0;
            padding: 8px;
            width: 200px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            padding: 10px 15px;
            background-color: #28a735;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #248582;
        }
        #output {
            margin-top: 20px;
            font-size: 1.2em;
            color: #633;
        }
    </style>
</head>
<body>
    <h3>Verifica Lunghezza Input</h3>
    <label for="input1">Input 1:</label>
    <input type="text" id="input1" placeholder="Inserisci un valore">
    <br>
    <label for="input2">Input 2:</label>
    <input type="text" id="input2" placeholder="Inserisci un valore">
    <br>
    
    <button onclick="verificaLunghezzaInput()">Verifica</button>
    <div id="output"></div>

    <script>
        function verificaLunghezzaInput() {
            const input1 = document.getElementById("input1").value;
            const input2 = document.getElementById("input2").value;

            const areBothInputsValid = input1.length > 8 && input2.length > 8;

            const outputDiv = document.getElementById("output");
            outputDiv.innerHTML = "<h3>Risultati:</h3>";
            outputDiv.innerHTML += ` ${areBothInputsValid}</p>`;
        }
    </script>
</body>
